extends ../../layouts/default.pug
//- include ../../mixins/alert.pug

block main
    .product-detail
        if product.title
            h1 #{product.title}

        if product.price
            div(class="mb-4") Price: <b>#{product.price}$</b>

        if product.discountPercentage
            div(class="mb-4") Discount: <b>#{product.discountPercentage}%</b>

        if product.stock
            div(class="mb-4") Stock: <b>#{product.stock}</b>

        if product.thumbnail
            div(class="mb-4")
                img(src=product.thumbnail style="width: 200px")


        if product.description
            div(class="mb-4") !{product.description}
    
        a(
            href=`/products`
            class="btn btn-danger"
        ) Back to list products

