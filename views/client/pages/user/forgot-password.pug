extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    //- +alert-success(3000)
    //- +alert-failure(3000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1(class="mb-4") Login

                form(
                    action=`/user/password/forgot`, 
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email *
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Send confirmation email
                