extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    //- +alert-success(3000)
    //- +alert-failure(3000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1(class="mb-4") Reset Password

                form(
                    action=`/user/password/resetPassword`, 
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Your New Password
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                        )
                    div(class="form-group")
                        label(for="password") Confirm New Password
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required 
                        )

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Confirm
                