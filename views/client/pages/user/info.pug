extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main
    //- +alert-success(3000)
    //- +alert-failure(3000)
    .container.my-3
        .row 
            .col-12 
                +box-head("User Information")
        .row
            .user-detail

                if(user.avatar)
                    img(src=user.avatar width="150px" class="mb-3")
                
                if(user.fullName)
                    p Full Name: <b>#{user.fullName}</b>
                if(user.email)
                    p Email: <b>#{user.email}</b>
                if(user.phone)
                    p Phone Number: <b>#{user.phone}</b>
                
                a(
                    href=`${prefixAdmin}/my-account/edit`
                    class="btn btn-warning"
                ) Edit Information