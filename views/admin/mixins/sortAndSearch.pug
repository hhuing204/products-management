mixin sortandSearch(filterStatus)
    .card.mb-3
        .card-header Sort and Search
        .card-body
            .row
                .col-6
                    each item in filterStatus 
                        button(
                            class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                            button-status=item.status
                        ) #{item.name}
                .col-6
                    form(id="form-search")
                        .input-group
                            input(
                                type="text"
                                placeholder="Type your key"
                                name="keyword"
                                class="form-control"
                            )
                            .input-group-append
                                button(
                                    class="btn btn-success"
                                    type="submit"
                                ) Search