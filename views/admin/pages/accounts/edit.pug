extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    +alert-success(3000)
    +alert-failure(3000)
    //- h1(class="mb-4") #{data.fullName}
    form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH` 
        id="form-edit-accounts" 
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Full Name *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value= data.fullName
                required
            )

        div(class="form-group")
            label(for="email") Email *
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                value= data.email
                required
            )
        div(class="form-group")
            label(for="password") Password *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="form-group")
            label(for="phone") Phone Number
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=data.phone
            )
        div(
            class="form-group"
            upload-image    
        )


            label(for="avatar") Avatar
            

            small.d-block.mt-2.text-muted
            input#thumbnailFile.form-control-file(
                type="file",
                name="thumbnailFile",
                accept="image/*"
                onchange="handleFileInput()"
                upload-image-input
            )
            img(
                src=data.avatar
                upload-image-preview
                class="image-preview"
            )
            span(
                button-delete 
                style="display: none; position: absolute; margin-top: 20px; margin-left: -28px; background: red; color: white; border-radius: 50%; width: 24px; height: 24px; cursor: pointer; text-align: center; line-height: 24px; font-weight: bold;"
            ) x

        div(class="form-group")
            label(for="role_id") Permissions
            select(name="role_id" id="role_id" class="form-control")
                option(disabled) --Select--
                each item in roles
                    option(value=item.id selected = item.id == data.role_id) #{item.title}

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=data.status === "active"
            )
            label(for="statusActive" class="form-check-label") Active
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=data.status === "inactive"
            )
            label(for="statusInactive" class="form-check-label") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary me-2"
            ) Change
            a(
                href=`${prefixAdmin}/accounts`
                class="btn btn-danger"
            ) Cancel


    //- script(src="/admin/js/product.js")