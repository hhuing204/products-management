extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .product-detail
        h1 User Information 

        if(user.avatar)
            img(src=user.avatar width="150px" class="mb-3")
        
        if(user.fullName)
            p Full Name: <b>#{user.fullName}</b>
        if(user.email)
            p Email: <b>#{user.email}</b>
        if(user.phone)
            p Phone Number: <b>#{user.phone}</b>
        p 
            span Status: 
            span 
                <b>#{user.status === "active" ? "Active": "Inactive"}</b>
        if(role.title) 
            p Permissions: <b>#{role.title}</b>
        
        a(
            href=`${prefixAdmin}/my-account/edit`
            class="btn btn-warning"
        ) Edit Information