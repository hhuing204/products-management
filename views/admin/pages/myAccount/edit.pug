extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
        +alert-success(3000)
        +alert-failure(3000)
        //- h1(class="mb-4") #{data.fullName}
        form(
            action=`${prefixAdmin}/my-account/edit?_method=PATCH` 
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Full Name *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value= user.fullName
                    required
                )

            div(class="form-group")
                label(for="email") Email *
                input(
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    value= user.email
                    required
                )
            div(class="form-group")
                label(for="password") Password *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            div(class="form-group")
                label(for="phone") Phone Number
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=user.phone
                )
            div(
                class="form-group"
                upload-image    
            )


                label(for="avatar") Avatar
                

                small.d-block.mt-2.text-muted
                input#thumbnailFile.form-control-file(
                    type="file",
                    name="thumbnailFile",
                    accept="image/*"
                    onchange="handleFileInput()"
                    upload-image-input
                )
                img(
                    src=user.avatar
                    upload-image-preview
                    class="image-preview"
                )
                span(
                    button-delete 
                    style="display: none; position: absolute; margin-top: 20px; margin-left: -28px; background: red; color: white; border-radius: 50%; width: 24px; height: 24px; cursor: pointer; text-align: center; line-height: 24px; font-weight: bold;"
                ) x

            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary me-2"
                ) Change
                a(
                    href=`${prefixAdmin}/dashboard`
                    class="btn btn-danger"
                ) Cancel


        //- script(src="/admin/js/product.js")