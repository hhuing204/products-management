extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    +alert-success(3000)
    +alert-failure(3000)
    h1(class="mb-4") #{product.title}
    form(
        action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH` 
        id="form-edit-product" 
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value= product.title
            )

        div(class="form-group")
            label(for="product_category_id") Category
            select(
                name="product_category_id"
                id="product_category_id"
                class="form-control"
            )
                option(value="") -- Select category --
                if(records)
                    +select-tree(records, 1, product.product_category_id)

        div(class="form-group")
            label(for="desc") Description
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            ) !{product.description}
        div(class="form-group")
            label(for="price") Price
            input(
                type="number"
                step="any"
                class="form-control"
                id="price"
                name="price"
                value=product.price
                min="0"
            )
        div(class="form-group")
            label(for="discount") Discount
            input(
                type="number"
                step="any"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=product.discountPercentage
                min="0"
            )
        div(class="form-group")
            label(for="stock") Stock
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=product.stock
                min="0"
            )
        div(
            class="form-group"
            upload-image    
        )


            label(for="thumbnail") Thumbnail
            

            small.d-block.mt-2.text-muted
            input#thumbnailFile.form-control-file(
                type="file",
                name="thumbnailFile",
                accept="image/*"
                onchange="handleFileInput()"
                upload-image-input
            )
            img(
                src=product.thumbnail
                upload-image-preview
                class="image-preview"
            )
            span(
                button-delete 
                style="display: none; position: absolute; margin-top: 20px; margin-left: -28px; background: red; color: white; border-radius: 50%; width: 24px; height: 24px; cursor: pointer; text-align: center; line-height: 24px; font-weight: bold;"
            ) x

        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Auto increase"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=product.status === "active"
            )
            label(for="statusActive" class="form-check-label") Active
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=product.status === "inactive"
            )
            label(for="statusInactive" class="form-check-label") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary me-2"
            ) Change
            a(
                href=`${prefixAdmin}/products`
                class="btn btn-danger"
            ) Cancel


    //- script(src="/admin/js/product.js")